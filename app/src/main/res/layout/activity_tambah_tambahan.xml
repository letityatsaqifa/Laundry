<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    tools:context=".tambahan.TambahTambahanActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/judultambah"
            android:textSize="25sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textAlignment="center"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/namaTambahan"
            android:textSize="25sp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/tvJudul"
            app:layout_constraintStart_toStartOf="parent"/>
        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/namaTambahan"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tvNama"
            android:background="@drawable/borderr"/>
        <TextView
            android:id="@+id/tvHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hargaTambahan"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/etNama"
            app:layout_constraintStart_toStartOf="parent"/>
        <EditText
            android:id="@+id/etHarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hargaTambahan"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:inputType="numberDecimal"
            android:maxLength="7"
            app:layout_constraintTop_toBottomOf="@id/tvHarga"
            android:background="@drawable/borderr"/>
        <TextView
            android:id="@+id/tvCabang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cabangTamabh"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/etHarga"
            app:layout_constraintStart_toStartOf="parent"/>
        <EditText
            android:id="@+id/etCabang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cabangTamabh"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tvCabang"
            android:background="@drawable/borderr"/>
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/statusTambah"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/etCabang"
            app:layout_constraintStart_toStartOf="parent"/>
        <EditText
            android:id="@+id/etStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/statusTambah"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tvStatus"
            android:background="@drawable/borderr"/>
        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:textColor="#ffffff"
            android:backgroundTint="#776B5D"
            android:text="@string/btnSimpan"
            android:textSize="20sp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/etStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>