<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    tools:context=".tambahan.TambahTambahanActivity">
    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH TAMBAHAN"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textAlignment="center"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:textSize="25sp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/tvJudul"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Lengkap"
        android:layout_marginTop="15dp"
        android:padding="16dp"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/tvNama"
        android:background="@drawable/border"/>
    <TextView
        android:id="@+id/tvTambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambahan"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/etNama"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etTambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tambahan"
        android:layout_marginTop="15dp"
        android:padding="16dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvTambah"
        android:background="@drawable/border"/>
    <TextView
        android:id="@+id/tvKet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keterangan"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/etTambah"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etKet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Keterangan"
        android:layout_marginTop="15dp"
        android:padding="16dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvKet"
        android:background="@drawable/border"/>
    <TextView
        android:id="@+id/tvNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No HP Aktif"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/etKet"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No HP Aktif"
        android:layout_marginTop="15dp"
        android:padding="16dp"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/tvNo"
        android:background="@drawable/border"/>
    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="Simpan"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/etNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>