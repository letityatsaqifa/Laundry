<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvLayananTambahan"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8D7B68"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvCardLayananTambahan_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[1]"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="22sp"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:id="@+id/ivHapus"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/silang"
                android:layout_marginTop="5dp"
                android:layout_marginStart="320dp"
                android:visibility="gone"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tvCardLayananTambahan_Nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/tvCardLayanan_Nama"
            android:textSize="27sp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/tvCardLayananTambahan_Harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/tvCardLayanan_Harga"
            android:textSize="22sp"
            android:gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>