<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    tools:context=".pelanggan.TambahPelangganActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/judulPelanggan"
            android:textSize="25sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textAlignment="center"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NamaPelanggan"
            android:textSize="25sp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/tvJudul"
            app:layout_constraintStart_toStartOf="parent"/>
        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/NamaPelanggan"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@id/tvNama"
            android:background="@drawable/border"/>
        <TextView
            android:id="@+id/tvAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alamatPelanggan"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/etNama"
            app:layout_constraintStart_toStartOf="parent"/>
        <EditText
            android:id="@+id/etAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/alamatPelanggan"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:inputType="textPostalAddress"
            app:layout_constraintTop_toBottomOf="@id/tvAlamat"
            android:background="@drawable/border"/>
        <TextView
            android:id="@+id/tvNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noPelanggan"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/etAlamat"
            app:layout_constraintStart_toStartOf="parent"/>
        <EditText
            android:id="@+id/etNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/noPelanggan"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@id/tvNo"
            android:background="@drawable/border"/>
        <TextView
            android:id="@+id/tvCabang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cabangPelanggan"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/etNo"
            app:layout_constraintStart_toStartOf="parent"/>
        <EditText
            android:id="@+id/etCabang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cabangPelanggan"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tvCabang"
            android:background="@drawable/border"/>
        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:text="@string/btnSimpan"
            android:textSize="20sp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/etCabang"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>