<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvLayanan"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvCardLayanan_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="ID Layanan"
            android:layout_marginTop="10dp"
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/tvCardLayanan_Nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Nama Layanan"
            android:textSize="27sp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/tvCardLayanan_Manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Keterangan"
            android:textSize="22sp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tvCardLayanan_Cabang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Cabang"
            android:textSize="22sp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tvCardLayanan_Harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textAlignment="center"
            android:text="Harga"
            android:textSize="22sp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tvCardLayanan_Kilo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Kiloan:"
            android:textSize="22sp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tvSatu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Satuan:"
            android:textSize="22sp"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:text="Edit"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"/>
            <Button
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:text="Lihat"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>