<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCabang"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvCardCabang_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9F8383"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="Id Cabang"
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/tvCardCabang_Nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Nama Cabang"
            android:textSize="27dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/tvCardCabang_Manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Manager Cabang"
            android:textSize="22dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tvCardCabang_Alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Alamat Cabang"
            android:textSize="22dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tvCardCabang_No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="No HP"
            android:textSize="22dp"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnCardCabang_Hubungi"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:text="Hubungi"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"/>
            <Button
                android:id="@+id/btnCardCabang_Lihat"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:text="Lihat"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>