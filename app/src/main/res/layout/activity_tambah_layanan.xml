<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    tools:context=".layanan.TambahLayananActivity">
    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH LAYANAN"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Layanan"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvJudul"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Lengkap"
        android:layout_marginTop="15dp"
        android:padding="16dp"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/tvNama"
        android:background="@drawable/border"/>
    <TextView
        android:id="@+id/tvCabang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cabang"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/etNama"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etCabang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cabang"
        android:layout_marginTop="15dp"
        android:padding="16dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvCabang"
        android:background="@drawable/border"/>
    <TextView
        android:id="@+id/tvKet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keterangan"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/etCabang"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etKet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Keterangan"
        android:layout_marginTop="15dp"
        android:padding="16dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvKet"
        android:background="@drawable/border"/>
    <TextView
        android:id="@+id/tvHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/etKet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvKilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kiloan"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvHarga"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etKilo"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:hint="Kiloan"
        android:layout_marginTop="25dp"
        android:layout_marginStart="23dp"
        android:padding="16dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvHarga"
        app:layout_constraintStart_toEndOf="@id/tvKilo"
        android:background="@drawable/border"/>
    <TextView
        android:id="@+id/tvSatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Satuan"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvKilo"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etSatu"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:hint="Satuan"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:padding="16dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvKilo"
        app:layout_constraintStart_toEndOf="@id/tvSatu"
        android:background="@drawable/border"/>
    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="Simpan"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/etSatu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>